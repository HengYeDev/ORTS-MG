<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFrameworks>net48;netcoreapp3.1</TargetFrameworks>
    <UseWindowsForms>true</UseWindowsForms>
    <AssemblyTitle>Open Rails Common Library</AssemblyTitle>
  </PropertyGroup>
  <PropertyGroup>
    <OutputPath>..\..\Program.Core</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="System.Management" Version="4.7.0" />
    <PackageReference Include="GetText.NET" Version="0.9.0" />
    <PackageReference Include="NuGet.Versioning" Version="5.6.0" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="MonoGame.Framework">
      <HintPath>..\..\..\MonoGame\Artifacts\MonoGame.Framework\WindowsDX\Release\$(TargetFramework)\MonoGame.Framework.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Reference Include="PIEHid32Net">
      <HintPath>..\3rdPartyLibs\PIEHid32Net.dll</HintPath>
    </Reference>
    <Reference Include="PIEHid64Net">
      <HintPath>..\3rdPartyLibs\PIEHid64Net.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>